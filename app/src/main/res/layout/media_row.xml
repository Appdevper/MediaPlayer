<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:padding="3dip" >

            <ImageView
                android:id="@+id/m_image"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:alpha="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/m_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="Rihanna "
            android:textColor="#040404"
            android:textSize="22dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/m_artis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/m_title"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/m_title"
            android:singleLine="true"
            android:text="Rihanna "
            android:textColor="#222222"
            android:textSize="18dip"
            android:typeface="sans" />

        <TextView
            android:id="@+id/m_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail"
            android:layout_alignLeft="@+id/m_artis"
            android:layout_alignParentRight="true"
            android:text="02:33"
            android:textColor="#00eeee"
            android:gravity="right"
            android:textSize="14dip"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#161616"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1" >

    </RelativeLayout>

</RelativeLayout>