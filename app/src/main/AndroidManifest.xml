<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.appdevper.mediaplayer">

    <uses-sdk android:minSdkVersion="14"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".app.AppController"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainHomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ContentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Media Server">
        </activity>
        <activity
            android:name=".activity.ImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name=".activity.MusicPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Player">
        </activity>
        <activity
            android:name=".activity.MusicRemoteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Controller">
        </activity>
        <activity
            android:name=".activity.RenderListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Media Renderer">
        </activity>
        <activity
            android:name=".activity.PlayListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="PlayList">
        </activity>
        <activity
            android:name=".activity.SettingPreferenceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">

        </activity>
        <activity
            android:name=".activity.SelectMediaActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

        <receiver
            android:name=".app.ServerNotification"
            android:exported="false">
            <intent-filter>
                <action android:name="APPSERVER_STARTED"/>
                <action android:name="APPSERVER_STOPPED"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".app.RequestStartStopReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="ACTION_START_APPSERVER"/>
                <action android:name="ACTION_STOP_APPSERVER"/>
            </intent-filter>
        </receiver>

        <service android:name=".app.FindUpnpService"/>
        <service android:name=".app.ServerUpnpService"/>

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>