<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appdevper.mediaplayer"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Permissions required for GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name="com.appdevper.mediaplayer.app.AppController"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.appdevper.mediaplayer.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appdevper.mediaplayer.activity.ContentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Media Server" >
        </activity>
        <activity
            android:name="com.appdevper.mediaplayer.activity.ImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.appdevper.mediaplayer.activity.MusicPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Player" >
        </activity>
        <activity
            android:name="com.appdevper.mediaplayer.activity.MusicRemoteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Controller" >
        </activity>
        <activity
            android:name="com.appdevper.mediaplayer.activity.RenderListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Media Renderer" >
        </activity>
        <activity
            android:name="com.appdevper.mediaplayer.activity.PlayListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="PlayList" >
        </activity>
        <activity
            android:name="com.appdevper.mediaplayer.activity.SettingPreferenceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity
            android:name="com.appdevper.mediaplayer.activity.SelectMediaActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>

        <receiver
            android:name="com.appdevper.mediaplayer.app.ServerNotification"
            android:exported="false" >
            <intent-filter>
                <action android:name="APPSERVER_STARTED" />
                <action android:name="APPSERVER_STOPPED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.appdevper.mediaplayer.app.RequestStartStopReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="ACTION_START_APPSERVER" />
                <action android:name="ACTION_STOP_APPSERVER" />
            </intent-filter>
        </receiver>

        <service android:name="com.appdevper.mediaplayer.app.FindUpnpService" />
        <service android:name="com.appdevper.mediaplayer.app.ServerUpnpService" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.google.android.gms.ads.purchase.InAppPurchaseActivity"
            android:theme="@style/Theme.IAPTheme" />
    </application>

</manifest>